# Custom configuration values for Kubernetes deployment
# Uncomment and modify values as needed

# Node Configuration
# NODE_NAME="k8s-node1"  # Node hostname (default: hostname -s)

# Network Configuration
# POD_NETWORK_CIDR="192.168.0.0/16"  # Pod network CIDR (default: 192.168.0.0/16)
# SERVICE_CIDR="10.96.0.0/12"  # Service CIDR (default: 10.96.0.0/12)
# CONTROL_PLANE_ENDPOINT="192.168.1.100"  # Control plane endpoint (default: first local IP)

# Kubernetes Version
# KUBERNETES_VERSION="v1.29.0"  # Kubernetes version to install (default: stable-1)

# Container Runtime
# CONTAINER_RUNTIME="containerd"  # Container runtime to use (options: containerd, docker; default: containerd)

# Network Addon
# NETWORK_ADDON="calico"  # Network addon to install (options: calico, flannel, custom; default: calico)
# CALICO_VERSION="v3.27.0"  # Calico version to install
# FLANNEL_VERSION="v0.24.0"  # Flannel version to install

# System Configuration
# DISABLE_SWAP="true"  # Whether to disable swap (recommended for Kubernetes; default: true)
# INSTALL_PREREQUISITES="true"  # Whether to install system prerequisites (default: true)

# Advanced Configuration
# ETCD_DATA_DIR="/var/lib/etcd"  # Directory for etcd data
# KUBELET_EXTRA_ARGS=""  # Extra arguments for kubelet
# KUBEADM_EXTRA_ARGS=""  # Extra arguments for kubeadm